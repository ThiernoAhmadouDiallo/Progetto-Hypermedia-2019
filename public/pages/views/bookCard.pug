doctype html
html
    head
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
    body
    .container
        .row
            each book in bookList
                .col-md-4
                    .card(style='width: 18rem;')
                        img.card-img-top(src="/assets/images/Covers/" + book.title + ".jpg", alt= book.title + " cover")
                    .card-body
                        h5.card-title
                            a.text-decoration-none(href="/books/bookByISBN/" + book.isbn, height="300") #{book.title}
                        h6
                            | By
                            a.text-decoration-none(href="/author/" + book.fullName)    #{book.fullName}
                        p.card-text #{book.price}  â‚¬
                        a.btn.btn-primary(href= '#') Rent Book